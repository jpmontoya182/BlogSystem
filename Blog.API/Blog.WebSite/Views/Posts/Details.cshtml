@model Blog.Models.DataBase.Posts
@{ViewData["Title"] = "Post Details";}
<div>
    <h4>Post Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Title</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
        <dt class = "col-sm-2">Post Content</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.PostContent)</dd>
        <dt class = "col-sm-2">Create Date</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.CreateDate)</dd>
        <dt class = "col-sm-2">Post State</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.State)</dd>
        <dt class = "col-sm-2">User</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.User.Username)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
