@model Blog.Models.DataBase.Comments

@{    ViewData["Title"] = "Details Comment";}

<h1>Details Comment</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Comment</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.ContentComment)</dd>
        <dt class = "col-sm-2">Create Date</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.CreateDate)</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Post)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Post.Title)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CommentId" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
