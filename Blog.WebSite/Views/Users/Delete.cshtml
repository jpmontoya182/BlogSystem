@model Blog.Models.DataBase.Users

@{    ViewData["Title"] = "Delete User";}

<h3>Are you sure you want to delete this user ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">User Name</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Username)</dd>
        <dt class = "col-sm-2">E-mail</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        <dt class = "col-sm-2">User Profile</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Profile.Name)</dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
